<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CursosOnline</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/owl.carousel.css")
    @Styles.Render("~/Content/owl.theme.default.min.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/tooplate-style.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/images")
    

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CursosOnline", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Nosotros", "About", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Estudiantes", "Index", "estudiantes")</li>
                        <li>@Html.ActionLink("Inscripciones", "index", "inscripciones")</li>
                    }
                    <li>@Html.ActionLink("Contacto", "Create", "contactos")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="">
        @RenderBody()
        <hr />
        <footer id="footer" data-stellar-background-ratio="0.5" class="unique-color-dark">
            <div class="container">
                <div class="row">

                    <div class="copyright-text col-md-12 col-sm-12">
                        <div class="col-md-6 col-sm-6">
                            <p>&copy; @DateTime.Now.Year - MAFRANFER CORPORATION</p>
                        </div>

                        <div class="col-md-6 col-sm-6">
                            <ul class="social-icon">
                                <li><a href="#" class="fa fa-facebook-square" attr="facebook icon"></a></li>
                                <li><a href="#" class="fa fa-twitter"></a></li>
                                <li><a href="#" class="fa fa-instagram"></a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </footer>
            
      
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap.min.js")
    @Scripts.Render("~/bundles/jquery.stellar.min.js")
    @Scripts.Render("~/bundles/owl.carousel.min.js")
    @Scripts.Render("~/bundles/smoothscroll.js")
    @Scripts.Render("~/bundles/custom.js")
    @RenderSection("scripts", required: false)
</body>
</html>
