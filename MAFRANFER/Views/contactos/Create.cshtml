@model MAFRANFER.Models.contacto


  
{
    <section id="contact" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row">

                <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <form id="contact-form" role="form" action="Create/" method="post">
                        @Html.AntiForgeryToken()
                        <div class="section-title">
                            <h1>Dejanos tu Mensaje</h1>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-4 col-sm-4">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { placeholder = "Nombre Completo", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4 col-sm-4">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Direccion Email", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4 col-sm-4">
                            <input type="submit" class="form-control" name="send message" value="Enviar Mensaje">
                        </div>
                        <div class="col-md-12 col-sm-12">
                            @Html.EditorFor(model => model.mensaje, new { htmlAttributes = new { placeholder = "Escribe tu mensaje", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.mensaje, "", new { @class = "text-danger" })
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
}
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
